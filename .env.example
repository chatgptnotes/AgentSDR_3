# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here
FLASK_PORT=5001

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Gmail OAuth Configuration
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:5001/orgs/gmail/callback

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# Email Automation Configuration
EMAIL_FETCH_INTERVAL_MINUTES=5
EMAIL_CLASSIFICATION_ENABLED=true
AUTO_DRAFT_RESPONSES=true
SENDER_RESEARCH_ENABLED=true

# Credit System Configuration
FREE_TIER_MONTHLY_CREDITS=400
PRO_TIER_MONTHLY_CREDITS=5000
BUSINESS_TIER_MONTHLY_CREDITS=30000

# Workflow Automation Configuration
MAX_WORKFLOWS_FREE=3
MAX_WORKFLOWS_PRO=50
MAX_WORKFLOWS_BUSINESS=500

# SMTP Configuration (Optional - for email notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_USE_TLS=true

# Flower (Celery monitoring) Configuration
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin

# Application Settings
APP_NAME=InboxAI
APP_VERSION=1.0
APP_URL=http://localhost:5001
DEBUG=true

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATE_LIMIT_PER_DAY=1000
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/inboxai.log
